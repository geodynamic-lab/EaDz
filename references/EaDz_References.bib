@article{RN24821,
   author = {Jialin, Wang and Wu, Chaodong and Zhou, Tianqi and Zhu, Wen and Zhou, Yanxi and Jiang, Xi and Yang, Disheng},
   title = {SOURCE-TO-SINK ANALYSIS OF A TRANSTENSIONAL RIFT BASIN FROM SYN-RIFT TO UPLIFT STAGES},
