   url = {<Go to ISI>://WOS:000283546200019},
   year = {2010},
   type = {Journal Article}
}

@article{RN32543,
   author = {Weislogel, A. L. and Graham, S. A. and Chang, E. Z. and Wooden, J. L. and Gehrels, G. E. and Yang, H. S.},
