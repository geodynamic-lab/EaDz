@article{RN24453,
   author = {Lee, Tae-Ho and Park, Kye-Hun and Yi, Keewook and Geng, Jian-zhen and Li, Huai-kun},
   title = {SHRIMP U-Pb ages and Hf isotopic composition of the detrital zircons from the Myogok Formation, SE Korea: development of terrestrial basin and igneous activity during the early Cretaceous},
   journal = {Geosciences Journal},
