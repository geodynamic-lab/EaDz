}

@article{RN167650,
   author = {Wang, Ping and Liu, Dongliang and Li, Haibing and Chevalier, Marie-Luce and Wang, Yadong and Pan, Jiawei and Zheng, Yong and Ge, Chenglong and Bai, Mingkun and Wang, Shiguang},
   title = {Sedimentary Provenance Changes Constrain the Eocene Initial Uplift of the Central Pamir, NW Tibetan Plateau},
   journal = {Frontiers in Earth Science},
   volume = {9},
   note = {Times Cited: 1
0
