@article{RN62032,
   author = {Laskowski, Andrew K. and Kapp, Paul and Ding, Lin and Campbell, Clay and Liu, XiaoHui},
   title = {Tectonic evolution of the Yarlung suture zone, Lopu Range region, southern Tibet},
