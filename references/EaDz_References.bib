@article{RN165732,
   author = {Lee, Jeong-Hyun and Oh, Min-Kyu and Choi, Taejin},
   title = {Recognition of the "Great Unconformity" in the eastern Sino-Korean Block: Insights from the Taebaek Group, Korea},
   journal = {Precambrian Research},
   volume = {364},
   note = {Times Cited: 0
