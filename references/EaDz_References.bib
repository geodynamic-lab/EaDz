@article{RN148691,
   author = {Wu, Fu-Yuan and Ji, Wei-Qiang and Liu, Chuan-Zhou and Chung, Sun-Lin},
   title = {Detrital zircon U-Pb and Hf isotopic data from the Xigaze fore-arc basin: Constraints on Transhimalayan magmatic evolution in southern Tibet},
