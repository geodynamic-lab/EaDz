   title = {Provenance of the Paleoproterozoic Hutuo Group basal conglomerates and Neoarchean crustal growth in the Wutai Mountains, North China Craton: Evidence from granite and quartzite pebble zircon U-Pb ages and Hf isotopes},
   journal = {Science China-Earth Sciences},
   volume = {55},
